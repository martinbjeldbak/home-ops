---
machine:
  type: controlplane
  nodeLabels:
    topology.kubernetes.io/zone: m
    node.kubernetes.io/gpu: "true"
  install:
    diskSelector:
      model: KXG60ZNV256G KIOXIA
---
apiVersion: v1alpha1
kind: HostnameConfig
hostname: k8s-2  # HP EliteDesk 800 G6 Mini
---
apiVersion: v1alpha1
kind: LinkAliasConfig
name: net0
selector:
  match: link.driver == "e1000e" && mac(link.permanent_addr) == "b0:22:7a:ef:25:10"
---
apiVersion: v1alpha1
kind: DHCPv4Config
name: eno1
clientIdentifier: mac
---
apiVersion: v1alpha1
kind: VLANConfig
name: bond0.30
vlanID: 30  # IOT
parent: eno1
mtu: 1500
---
apiVersion: v1alpha1
kind: VLANConfig
name: bond0.80
vlanID: 80  # VPN
parent: eno1
mtu: 1500
---
apiVersion: v1alpha1
kind: VLANConfig
name: bond0.20
vlanID: 20  # TRUSTED
parent: eno1
mtu: 1500
